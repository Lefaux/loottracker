{% extends 'base.html.twig' %}
{% import 'macros/macros.html.twig' as macros %}
{% block title %}Character Overview{% endblock %}

{% block body %}
    <div class="content-section bg-primary text-white">
        <div class="container">
            <h1>Best In Slot List</h1>
        </div>
    </div>
    <div class="content-section bg-transparent">
        <div class="container-fluid">
            <div class="row">
                <table class="bis-list-table">
                {% for classId,players in bis %}
                    <tr>
                        <th>{{ classUtility.className(classId)}}</th>
                        <th colspan="3">Head</th>
                        <th colspan="3">Neck</th>
                        <th colspan="3">Shoulder</th>
                        <th colspan="3">Back</th>
                        <th colspan="3">Chest</th>
                        <th colspan="3">Wrist</th>
                        <th colspan="3">Hands</th>
                        <th colspan="3">Legs</th>
                        <th colspan="3">Feet</th>
                        <th colspan="3">Ring</th>
                        <th colspan="3">Trinket</th>
                        <th colspan="3">Main Hand</th>
                        <th colspan="3">Off-Hand</th>
                        <th colspan="3">Ranged</th>
                        <th colspan="3">Last Updated</th>
                    </tr>
                    {% for character in players %}
                        <tr>
                            <td>
                                {% if character.char.spec == 1 %}
                                    <i class="fa fa-fw fa-shield-alt"></i>
                                {% elseif character.char.spec == 2 %}
                                    <i class="fa fa-fw fa-band-aid"></i>
                                {% elseif character.char.spec == 3 %}
                                    <i class="fa fa-fw fa-skull-crossbones"></i>
                                {% endif %}
                                {{ character.char.name }} ({{ raceUtility.raceName(character.char.race) }})
                            </td>
                            <td>{{ macros.itemicon(character.bisList, 1, 1) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 1, 2) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 1, 3) }}</td>

                            <td>{{ macros.itemicon(character.bisList, 2, 1) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 2, 2) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 2, 3) }}</td>

                            <td>{{ macros.itemicon(character.bisList, 3, 1) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 3, 2) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 3, 3) }}</td>

                            <td>{{ macros.itemicon(character.bisList, 16, 1) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 16, 2) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 16, 3) }}</td>

