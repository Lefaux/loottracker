{% extends 'base.html.twig' %}
{% import 'macros/macros.html.twig' as macros %}
{% block title %}BiS List{% endblock %}

{% block body %}
    <div class="content-section bg-primary text-white">
        <div class="container">
            <h1>Best In Slot List</h1>
        </div>
    </div>
    <div class="content-section bg-transparent">
        <div class="container-fluid">
            <div class="rowx" align="center">
                <table class="bis-list-table">
                {% for classId,players in bis %}
                    <tr>
                        <th>{{ classUtility.className(classId)}}</th>
                        <th colspan="3">{% trans %}Head{% endtrans %}</th>
                        <th colspan="3">{% trans %}Neck{% endtrans %}</th>
                        <th colspan="3">{% trans %}Shoulder{% endtrans %}</th>
                        <th colspan="3">{% trans %}Back{% endtrans %}</th>
                        <th colspan="3">{% trans %}Chest{% endtrans %}</th>
                        <th colspan="3">{% trans %}Wrist{% endtrans %}</th>
                        <th colspan="3">{% trans %}Hands{% endtrans %}</th>
                        <th colspan="3">{% trans %}Waist{% endtrans %}</th>
                        <th colspan="3">{% trans %}Legs{% endtrans %}</th>
                        <th colspan="3">{% trans %}Feet{% endtrans %}</th>
                        <th colspan="3">{% trans %}Ring{% endtrans %}</th>
                        <th colspan="3">{% trans %}Trinket{% endtrans %}</th>
                        <th colspan="3">{% trans %}Main Hand{% endtrans %}</th>
                        <th colspan="3">{% trans %}Off-Hand{% endtrans %}</th>
                        <th colspan="3">{% trans %}Ranged{% endtrans %}</th>
                        <th colspan="3">{% trans %}Updated{% endtrans %}</th>
                    </tr>
                    {% for character in players %}
                        <tr>
                            <td class="bis-list-name">
                                {% if character.char.spec == 1 %}
                                    <i class="fa fa-fw fa-shield-alt"></i>
                                {% elseif character.char.spec == 2 %}
                                    <i class="fa fa-fw fa-band-aid"></i>
                                {% elseif character.char.spec == 3 %}
                                    <i class="fa fa-fw fa-skull-crossbones"></i>
                                {% endif %}
                                <a href="{{ path('character', {'charId': character.char.id}) }}">{{ character.char.name }}</a>
                                <br><small>{{ raceUtility.raceName(character.char.race) }}</small>
                            </td>
                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 1, 1, wowheaddomain) }}</td>
                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 1, 2, wowheaddomain) }}</td>
                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 1, 3, wowheaddomain) }}</td>

                            <td>{{ macros.itemicon(character.bisList, 2, 1, wowheaddomain) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 2, 2, wowheaddomain) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 2, 3, wowheaddomain) }}</td>

                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 3, 1, wowheaddomain) }}</td>
                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 3, 2, wowheaddomain) }}</td>
                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 3, 3, wowheaddomain) }}</td>

                            <td>{{ macros.itemicon(character.bisList, 16, 1, wowheaddomain) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 16, 2, wowheaddomain) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 16, 3, wowheaddomain) }}</td>

                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 5, 1, wowheaddomain) }}</td>
                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 5, 2, wowheaddomain) }}</td>
                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 5, 3, wowheaddomain) }}</td>

                            <td>{{ macros.itemicon(character.bisList, 9, 1, wowheaddomain) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 9, 2, wowheaddomain) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 9, 3, wowheaddomain) }}</td>

                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 10, 1, wowheaddomain) }}</td>
                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 10, 2, wowheaddomain) }}</td>
                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 10, 3, wowheaddomain) }}</td>

                            <td>{{ macros.itemicon(character.bisList, 6, 1, wowheaddomain) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 6, 2, wowheaddomain) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 6, 3, wowheaddomain) }}</td>

                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 7, 1, wowheaddomain) }}</td>
