                            <td>{{ macros.itemicon(character.bisList, 12, 1, wowheaddomain) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 12, 2, wowheaddomain) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 12, 3, wowheaddomain) }}</td>

                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 13, 1, wowheaddomain) }}</td>
                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 13, 2, wowheaddomain) }}</td>
                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 13, 3, wowheaddomain) }}</td>

                            <td>{{ macros.itemicon(character.bisList, 14, 1, wowheaddomain) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 14, 2, wowheaddomain) }}</td>
                            <td>{{ macros.itemicon(character.bisList, 14, 3, wowheaddomain) }}</td>

                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 15, 1, wowheaddomain) }}</td>
                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 15, 2, wowheaddomain) }}</td>
                            <td class="bis-list-odd">{{ macros.itemicon(character.bisList, 15, 3, wowheaddomain) }}</td>
                            <td>{{ character.char.lastUpdate|date("d.m.y") }}</td>
                        </tr>
                    {% endfor %}
                {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
