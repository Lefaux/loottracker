<div class="pagination-section">
    {% if resultsTotal is defined and resultsFrom is defined and resultsTo is defined %}
        <h4>Showing results <strong>{{ resultsFrom }}</strong> to <strong>{{ resultsTo }}</strong> of <strong>{{ resultsTotal }}</strong></h4>
    {% endif %}
    {% if pages|length > 1 %}
        <nav>
            <ul class="pagination">
                {% for pageDesc, page in pages %}
                    {% if current == page %}
                        <li class="page-item active"><a class="page-link" href="{{ path(routeName, arguments|merge({'page': page})) }}">{{ page }}</a></li>
                    {% else %}
                        <li class="page-item"><a class="page-link" href="{{ path(routeName, arguments|merge({'page': page})) }}">{{ page }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </nav>
    {% endif %}
</div>
