{% macro link(link, label, class = 'secondary', icon = null, target = null) %}
    <a href="{{ link }}" class="btn btn-{{ class }}"{% if target %} target="{{ target }}"{% endif %}>
        {% if icon %}<span class="btn-icon"><i class="fal fa-{{ icon }}"></i></span>{% endif %}
        <span class="btn-text">{{ label }}</span>
    </a>
{% endmacro %}

{% macro submit(label, class = 'default', icon = null) %}
    <button type="submit" class="btn btn-{{ class }}">
        {% if icon %}<span class="btn-icon"><i class="fal fa-{{ icon }}"></i></span>{% endif %}
        <span class="btn-text">{{ label }}</span>
    </button>
{% endmacro %}
