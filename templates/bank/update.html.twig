{% extends 'base.html.twig' %}

{% block title %}Guildbank{% endblock %}

{% block body %}
<div class="content-section bg-transparent">
    <div class="container">
        <h1>Update Guildbank</h1>
        <form action="{{ path('bank_upload') }}" method="post">
            <div class="form-group">
                <textarea cols="40" rows="10" name="bankstring" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Upload">
            </div>
        </form>
    </div>
</div>
{% endblock %}
