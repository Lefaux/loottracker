{% macro checkbox(label, name, value, filters) %}
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="{{ name }}{{ value }}" name="f[{{name}}][{{ value }}]" value="1" {% if filters[name][value] is defined %} checked="checked"{% endif %}>
        <label class="form-check-label" for="{{ name }}{{ value }}">{{ label|raw }}</label>
    </div>
{% endmacro %}