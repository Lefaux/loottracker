{% extends 'base.html.twig' %}
{% import 'macros/macros.html.twig' as macros %}
{% block title %}{% trans %}Raid Signup{% endtrans %}{% endblock %}

{% block body %}
    <div class="content-section bg-transparent">
        <div class="container">
            <h1>Raid Signups</h1>
            <form action="{{ path('raid_signup_edit') }}" method="post">
                <div class="row">
                    <table class="table table-sm table-striped">
                        <tr>
                            <th>From</th>
                            {% for character in account.characters %}
                                <th>{{ character.name }}</th>
                            {% endfor %}
                            <th>Deadline</th>
                            <th>Setup</th>
                        </tr>
                    {% for event in events %}
                        <tr class="{{ macros.tableHighLight(signUps, event, account) }}">
                            <td>{{ event.title }}<br>
                                <small>{{ event.start|date('D, d.m.Y') }}</small>
                            </td>
                            {% for character in account.characters %}
                                <td>
                                    {% if event.deadline|date('U') > "now"|date('U') %}
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="signup[{{ character.id }}][{{ event.id }}]" id="signupTrue_{{ character.id }}_{{ event.id }}" value="yes" {{ macros.signedUpCheckbox(signUps, character, event, '1') }}>
                                        <label class="form-check-label" for="signupTrue_{{ character.id }}_{{ event.id }}">Yes</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="signup[{{ character.id }}][{{ event.id }}]" id="signupFalse_{{ character.id }}_{{ event.id }}" value="no" {{ macros.signedUpCheckbox(signUps, character, event, '2') }}>
                                        <label class="form-check-label" for="signupFalse_{{ character.id }}_{{ event.id }}">No</label>
                                    </div>
                                    {% else %}
                                        SignUp Closed!
                                    {% endif %}
                                </td>
                            {% endfor %}
                            <td>{{ event.deadline|date('d.m.Y H:i') }}</td>
                            <td>
                                {% if event.raidGroups is defined %}
                                    <ul class="list-group">
                                        {% for raidGroup in event.raidGroups %}
                                            {% if raidGroup.setup.status is defined and raidGroup.setup.status == 1 %}
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    <a class="btn btn-success btn-sm" href="{{ path('raid_setup', {'raidGroupId': raidGroup.id}) }}">{{ raidGroup.name }}</a>
                                                    <span class="badge badge-light">{{ zones.zoneName(raidGroup.zone) }}</span>
                                                    <span class="badge badge-success">Final</span>
                                                </li>
                                            {% else %}
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    {{ raidGroup.name }}
                                                    <span class="badge badge-light">{{ zones.zoneName(raidGroup.zone) }}</span>
                                                    <span class="badge badge-danger">Planung</span>
                                                </li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </table>
                    <input type="submit" value="Save" class="btn btn-success">
                </div>
            </form>
        </div>
    </div>
{% endblock %}

