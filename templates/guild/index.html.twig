{% extends 'base.html.twig' %}
{% import 'macros/macros.html.twig' as macros %}

{% block title %}Guild Controller{% endblock %}

{% block body %}
    <div class="content-section bg-transparent">
        <div class="container">
            <h1>Upload guild roster</h1>
            <form action="{{ path('guild_upload') }}" method="post">
                <div class="form-group">
                    <label for="dkpstring">Enter Guild String here </label>
                    <textarea id="dkpstring" name="guilddata" class="form-control" cols="40" rows="15"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary start">
                        <span class="btn-icon">
                            <i class="fa fa-upload"></i>
                        </span>
                        <span class="btn-text">Start upload</span>
                    </button>
                </div>
            </form>
            <hr>
            <h3>How To:</h3>
            <ol>
                <li>Get GuildBankManager from Lefaux</li>
                <li>Enable the Addon</li>
                <li>Log Into WoW</li>
                <li>Type <kbd>/gbm gilde</kbd></li>
                <li>Log out of the game</li>
                <li>Find <kbd>GuildBankManager.lua</kbd> in <kbd>C:\Program Files (x86)\World of Warcraft\_classic_\WTF\Account\LEFAUX\SavedVariables</kbd></li>
                <li>Copy all contents of GuildBankManager.lu and paste it into the field above</li>
                <li>Press <kbd>Start upload</kbd></li>
            </ol>
        </div>
    </div>
{% endblock %}
